#:kivy 2.3.1
# Import the translator instance from the app
#:set _ app._

<BoxLayout>
    spacing: '10dp'
    padding: '10dp'

<Label>
    font_name: "ChakraPetch"
    font_size: "20sp"
<TextInput>
    font_name: 'ChakraPetch'

<WarningPopup>
    size_hint: .7,.5
    auto_dismiss: False
    title: root.title

    BoxLayout:
        orientation:'vertical'
        Label:
            text: root.message
        Button:
            size_hint_y: .3
            text: "Okay"
            on_press: root.dismiss()
<Window>
    TabbedPanel:
        size: root.size
        pos: root.pos
        do_default_tab: False
        tab_width: self.width / len(self.tab_list) if self.tab_list else 100


        TabbedPanelItem:
            text:_("write")
            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    size_hint_y: .08
                    Label:
                        text: _("write-about-day")
                        # Desativa o controle de tamanho pelo layout em ambas as direções
                        # size_hint_x: None
                        # size_hint_y: None
                        # Define o tamanho exato com base no texto renderizado
                        # size: self.texture_size
                    Label:
                        text: _("day") + " " + root.return_day()
                        # Desativa o controle de tamanho pelo layout em ambas as direções
                        # size_hint_x: None
                        # size_hint_y: None
                        # Define o tamanho exato com base no texto renderizado
                        # size: self.texture_size
                BoxLayout:
                    orientation: "horizontal"
                    TextInput:
                        id: diary_input
                        hint_text: _("text-style-tip")
                        size_hint_y: 1
                        on_text: root.text_changed(self.text)
                    RstDocument:
                        id: diary_display
                        text: _("text-style-tip")
                Label:
                    text: _("how-did-you-felt")
                    size_hint_y: None
                    size: self.texture_size
                BoxLayout:
                    spacing: '2dp'
                    padding: 0
                    orientation: "horizontal"
                    size_hint_y: .1
                    id: emotions_box

                    ToggleButton:
                        emotion_id: "happy"
                        text: _("happy")
                        group: "emotion"
                    ToggleButton:
                        emotion_id: "peace"
                        text:_("peace")
                        group: "emotion"
                    ToggleButton:
                        emotion_id: "sad"
                        text: _("sad")
                        group: "emotion"
                    ToggleButton:
                        emotion_id: "confused"
                        text: _("confused")
                        group: "emotion"
                    ToggleButton:
                        emotion_id: "shame"
                        text: _("shame")
                        group: "emotion"
                    ToggleButton:
                        emotion_id: "angry"
                        text: _("angry")
                        group: "emotion"
                    ToggleButton:
                        emotion_id: "meh"
                        text: _("meh")
                        group: "emotion"
                    ToggleButton:
                        emotion_id: "tired"
                        text: _("tired")
                        group: "emotion"

                BoxLayout:
                    orientation: "horizontal"
                    spacing: '10dp'
                    padding: 0
                    size_hint_y: .1
                    # size: self.texture_size
                    Button:
                        text: _("add-midia")
                        # on_press: callback_function
                    Button:
                        text: _("save")
                        on_press: root.save_day()

        TabbedPanelItem:
            text: _("read")
            Label:
                text:'SJHKJHDKJSHAKJD'

        TabbedPanelItem:
            text: _("explore")
        
        TabbedPanelItem:
            text: _("about")

            BoxLayout:
                Label:
                    text: "Made by Isaque"